{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true
  },

  "include": ["./pages/**/*", "./components/**/*"],
  "exclude": ["node_modules", "./stores"]
}

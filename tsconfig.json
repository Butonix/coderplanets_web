{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "alwaysStrict": true
  },

  "include": [
    "./pages/**/*",
    "./components/**/*",
    "./stores/**/*"
  ],
  "exclude": ["node_modules"]
}

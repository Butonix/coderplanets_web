{
  "name": "mastani",
  "version": "0.0.1",
  "license": "TODO",
  "scripts": {
    "dev": "run-p server compile:watch",
    "server": "npm run clean && node server.js",
    "compile": "tsc",
    "compile:watch": "npm run compile -- --watch",
    "build": "run-s compile dist clean",
    "dist": "shjs ./helper/create_default_lang.js && next build && next export -o \"build\"",
    "start": "NODE_ENV=production node server.js",
    "lint": "tslint pages/* components/**/* stores/**/*  -e \"**/*.js\"",
    "clean": "shjs ./helper/clean.js",
    "precommit": "lint-staged",
    "gen": "plop --plopfile ./helper/generators/index.js"
  },
  "lint-staged": {
    "*.tsx": [
      "prettier",
      "tslint"
    ]
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-decorators-legacy",
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ],
      [
        "react-intl",
        {
          "messagesDir": "lang/.messages/"
        }
      ]
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "tabWidth": 2,
    "semi": false
  },
  "dependencies": {
    "mobx": "3.2.2",
    "mobx-react": "^4.2.2",
    "mobx-state-tree": "^0.11.0",
    "mobx-utils": "^3.1.1",
    "next": "^3.2.1",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "react-intl": "^2.3.0",
    "styled-components": "2.1.2"
  },
  "devDependencies": {
    "@types/node": "8.0.26",
    "@types/react": "16.0.5",
    "babel-plugin-react-intl": "^2.3.1",
    "babel-plugin-styled-components": "1.1.7",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "chalk": "^2.1.0",
    "eslint-config-airbnb": "15.1.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "mobx-react-devtools": "^4.2.15",
    "npm-run-all": "^4.1.1",
    "plop": "^1.8.1",
    "shelljs": "^0.7.8",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.4.0",
    "typescript": "2.4.2"
  }
}
